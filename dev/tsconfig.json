{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@webview/*": ["../src/reactTopoViewer/webview/*"],
      "@shared/*": ["../src/reactTopoViewer/shared/*"]
    }
  },
  "include": ["./**/*.ts", "./**/*.tsx", "../src/reactTopoViewer/**/*.ts", "../src/reactTopoViewer/**/*.tsx"]
}
