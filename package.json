{
  "name": "vscode-containerlab",
  "publisher": "srl-labs",
  "displayName": "Containerlab",
  "icon": "resources/containerlab.png",
  "description": "Manages containerlab topologies in VS Code",
  "author": "SRL Labs",
  "version": "0.23.2",
  "homepage": "https://containerlab.dev/manual/vsc-extension/",
  "engines": {
    "vscode": "^1.99.0",
    "node": ">=24.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/srl-labs/vscode-containerlab"
  },
  "extensionPack": [
    "hediet.vscode-drawio",
    "redhat.vscode-yaml"
  ],
  "main": "./dist/extension.js",
  "activationEvents": [
    "onStartupFinished"
  ],
  "categories": [
    "Programming Languages",
    "Linters",
    "Other"
  ],
  "keywords": [
    "containerlab",
    "clab",
    "docker",
    "container",
    "containers"
  ],
  "license": "Apache-2.0",
